{
  "compilerOptions": {
      "locale": "en",
      "target": "es2018",
      "lib": ["esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "react"
  },
  "include": ["./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules"]
}